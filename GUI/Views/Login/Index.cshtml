@{
        Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Foodie</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="page-login">

    <!-- Main login section -->
    <main class="section">
        <h2 class="section-title">Đăng nhập</h2>
        <form id="loginForm" class="form-container">
            <input type="email" name="email" placeholder="Email" class="input-field" required>
            <input type="password" name="password" placeholder="Mật khẩu" class="input-field" required>
            <button type="submit" class="btn">Đăng nhập</button>
        </form>
        <p class="login-footer-text">
            Chưa có tài khoản? <a href="register.html">Đăng ký</a>
        </p>
    </main>

 

    <script src="/js/script.js"></script>
    <script>
        // Handle login form
        document.getElementById("loginForm").addEventListener("submit", async (e) => {
          e.preventDefault();
          const formData = {
            email: e.target.email.value,
            password: e.target.password.value
          };
          try {
            const res = await fetch("http://localhost:5000/api/auth/login", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(formData)
            });
            const data = await res.json();
            if (res.ok) {
              alert("Đăng nhập thành công!");
              localStorage.setItem("token", data.token);
              window.location.href = "orders.html";
            } else {
              alert(data.message || "Sai email hoặc mật khẩu!");
            }
          } catch (err) {
            console.error(err);
            alert("Lỗi server, thử lại sau.");
          }
        });
    </script>
</body>
</html>
